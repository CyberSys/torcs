dnl Taken from FlightGear
AC_MSG_CHECKING([for plib 1.6.0 or newer])
AC_TRY_RUN([
#include <unistd.h>
#include <plib/ul.h>

#define MIN_PLIB_VERSION 160

int main() {
    int major, minor, micro;

    if ( PLIB_VERSION != MIN_PLIB_VERSION ) {
	 return -1;
    }

    return 0;
}

],
  AC_MSG_RESULT(yes),
  [AC_MSG_ERROR([Install plib 1.6.0 first...])],
  AC_MSG_RESULT(yes)
)

