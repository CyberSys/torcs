AC_INIT(Make-config.in)
AM_INIT_AUTOMAKE(torcs, 1.2.0)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_CPP

AC_LANG_CPLUSPLUS

AC_PROG_CXX
AC_PROG_RANLIB
AC_PROG_INSTALL

dnl Checks for header files.
AC_HEADER_STDC

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_C_INLINE
AC_HEADER_TIME

AC_CHECK_PROG(AR, ar, :, ar, /usr/bin/ar)
AC_CHECK_PROG(LD, ld, :, ld, /usr/bin/gxx)

AC_C_BIGENDIAN

AC_PATH_X
#CFLAGS="-ansi -Wall -Wstrict-prototypes"
CFLAGS="-Wall -Wstrict-prototypes"
AC_ARG_ENABLE(debug,
	[  --enable-debug          set the debug mode], 
	CFLAGS="$CFLAGS -g -DDEBUG -DDEBUG_OUT",
	CFLAGS="$CFLAGS -O3")

AC_ARG_ENABLE(ccmalloc,
	[  --enable-ccmalloc       set the ccmalloc mode (beware path...)], 
	LDFLAGS="$LDFLAGS /home/torcs/ccmalloc-0.3.9-nco/obj/ccmalloc-g++.o -L/home/torcs/ccmalloc-0.3.9-nco/lib -lccmalloc -ldl",
	LDFLAGS="$LDFLAGS")

AC_ARG_ENABLE(profiler,
	[  --enable-profiler       set the profiler mode], 
	CFLAGS="$CFLAGS -DPROFILER",
	CFLAGS="$CFLAGS")

CXXFLAGS="$CFLAGS"
LDFLAGS="$LDFLAGS -L$x_libraries"

