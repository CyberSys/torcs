prefix=@prefix@
exec_prefix=@exec_prefix@

BINDIR=@bindir@
LIBDIR=@libdir@/torcs
DATADIR=@datadir@/games/torcs
VARDIR=@localstatedir@/games/torcs

LOCAL_CONF=$HOME/.torcs

if [ -d $DATADIR ]
then
    if [ ! -d $LOCAL_CONF ]
    then
	rm -rf $LOCAL_CONF
	mkdir -p $LOCAL_CONF
	echo "$LOCAL_CONF created, copying/linking game data"
    fi
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$LIBDIR/lib
    cd $DATADIR
    if [ -f $LIBDIR/setup_linux.sh ]
    then
	/bin/bash $LIBDIR/setup_linux.sh $LOCAL_CONF
	if [ $? -ne 0 ]
	then
	    exit 1
	fi
    else
	echo "$LIBDIR/setup_linux.sh file does not exist, check your installation"
	exit 1
    fi
    $LIBDIR/torcs -l $LOCAL_CONF -D $DATADIR -L $LIBDIR -V $VARDIR $*
    exit 0
fi

echo "TORCS location not found"
	
	
