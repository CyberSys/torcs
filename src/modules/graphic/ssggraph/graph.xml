<!DOCTYPE params SYSTEM "../../../libs/tgf/params.dtd">

<params name="graph" type="param" mode="mw">
  <section name="Graphic">
    <attnum name="smoke value" val="300"></attnum>
    <attnum name="smoke interval" val="0.1"></attnum>
    <attnum name="smoke duration" val="120"></attnum>

    <attnum name="skid value" val="20"></attnum>
    <attnum name="skid length" val="300"></attnum>
    <attnum name="skid interval" val="0.3"></attnum>

    <attnum name="fov factor" val="1.0"></attnum>
  </section>

  <section name="Display Mode">
    <attnum name="driver board" val="2"></attnum>
    <attnum name="leader board" val="1"></attnum>
    <attnum name="driver counter" val="1"></attnum>
    <attnum name="debug info" val="1"></attnum>
    <attnum name="camera" val="0"></attnum>
    <attnum name="camera head list" val="9"></attnum>
    <attnum name="G graph" val="1"></attnum>
  </section>

  <section name="TV Director View">
    <attnum name="change camera interval" val="30"></attnum>
    <attnum name="event interval" val="5"></attnum>
    <attnum name="proximity threshold" val="25.0"></attnum>
  </section>

</params>
