<!DOCTYPE params SYSTEM "../../../src/libs/tgf/params.dtd" [
<!-- general definitions for tracks -->
<!ENTITY default-surfaces SYSTEM "data/tracks/surfaces.xml">
]>

<params name="MICHIGAN SPEEDWAY" type="trackdef" mode="mw">

  <section name="Surfaces">
    <section name="List">
      &default-surfaces;
    </section>
  </section>

  <section name="Header">
    <attstr name="name"              val="Michigan Speedway"/>
    <attstr name="category"          val="oval"/>
    <attnum name="version"           val="3"/>
    <attstr name="author"            val="E.Espie"/>
    <attstr name="description"       val="This is an D-shaped oval with banking"/>
  </section>

  <section name="Graphic">
    <attstr name="3d description" val="michigan.ac"/>
    <attstr name="background image" val="background.png"/>
    <attnum name="background color R" val="0.28125"/>
    <attnum name="background color G" val="0.4375"/>
    <attnum name="background color B" val="0.75"/>

    <section name="Environment Mapping">
      <section name="1">
	<attstr name="env map image" val="env.png"/>
      </section>
    </section>

    <section name="Terrain Generation">
      <attnum name="track step" unit="m" val="15"/>
      <attnum name="border margin" unit="m" val="100"/>
      <attnum name="border step" unit="m" val="30"/>
      <attnum name="border height" unit="m" val="0"/>
      <attstr name="orientation" val="anti-clockwise"/>
    </section>
  </section>

  <section name="Main Track">

    <attstr name="surface" in="asphalt,grass,sand" val="asphalt-lines"/>
    <attnum name="width" unit="m" val="18.0"/>

    <attstr name="rside surface"  val="grass"/>
    <attnum name="rside width"    val="0.0"/>

    <attstr name="lside surface"  val="concrete3"/>
    <attnum name="lside width"    val="15.0"/>
    <attstr name="lside type" in="level,tangent" val="level"/>

    <attnum name="profil steps length" val="12" unit="m"/>

    <!-- PITS -->
    <attstr name="pit type"   val="track side"/>
    <attstr name="pit side"   val="left"/>
    <attstr name="pit entry"  val="400"/>
    <attstr name="pit start"  val="500"/>
    <attstr name="pit end"    val="500"/>
    <attstr name="pit exit"   val="600"/>
    <attnum name="pit length" val="15" unit="m"/>
    <attnum name="pit width"  val="5" unit="m"/>

    <section name="segments">
      <!-- first segment -->

      <section name="0">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="ft" val="1970"/>
	<attnum name="arc" unit="deg" val="34"/>
	<attnum name="z start left" unit="ft" val="0"/>
	<attnum name="z start right" unit="ft" val="7.75"/>
	<attnum name="z end left" unit="ft" val="0"/>
	<attnum name="z end right" unit="ft" val="12.5"/>
      </section>

      <section name="100">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="ft" val="1970"/>
	<attnum name="arc" unit="deg" val="18"/>
	<attnum name="z end left" unit="ft" val="0"/>
	<attnum name="z end right" unit="ft" val="10"/>
	<attstr name="profil" val="spline"/>
	<attnum name="profil steps" val="35"/>
      </section>

      <section name="200">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="ft" val="560"/>
	<attnum name="arc" unit="deg" val="128"/>
	<attnum name="z end left" unit="ft" val="0"/>
	<attnum name="z end right" unit="ft" val="10"/>
      </section>


      <section name="400">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="ft" val="800"/>
	<attnum name="z end left" unit="ft" val="0"/>
	<attnum name="z end right" unit="ft" val="5"/>
	<attstr name="profil" val="spline"/>
	<attnum name="profil steps" val="48"/>
      </section>


      <section name="500">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="ft" val="622.190326"/>
	<attnum name="z end left" unit="ft" val="0"/>
	<attnum name="z end right" unit="ft" val="5"/>
	<attstr name="lside surface"  val="asphalt-pits"/>
      </section>

      <section name="600">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="ft" val="800"/>
	<attnum name="z end left" unit="ft" val="0"/>
	<attnum name="z end right" unit="ft" val="10"/>
	<attstr name="profil" val="spline"/>
	<attnum name="profil steps" val="48"/>
	<attstr name="lside surface"  val="concrete3"/>
      </section>


      <section name="700">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="ft" val="560"/>
	<attnum name="arc" unit="deg" val="128"/>
	<attnum name="z end left" unit="ft" val="0"/>
	<attnum name="z end right" unit="ft" val="10"/>
      </section>


      <section name="800">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="ft" val="1970"/>
	<attnum name="arc" unit="deg" val="18"/>
	<attnum name="z end left" unit="ft" val="0"/>
	<attnum name="z end right" unit="ft" val="7.75"/>
	<attstr name="profil" val="spline"/>
	<attnum name="profil steps" val="35"/>
      </section>

      <section name="900">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="ft" val="1970"/>
	<attnum name="arc" unit="deg" val="34"/>
	<attnum name="z end left" unit="ft" val="0"/>
	<attnum name="z end right" unit="ft" val="7.75"/>
      </section>

    </section>
  </section>

</params>

