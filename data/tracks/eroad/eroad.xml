<!DOCTYPE params SYSTEM "../../../src/libs/tgf/params.dtd" [
<!-- general definitions for tracks -->
<!ENTITY default-surfaces SYSTEM "data/tracks/surfaces.xml">
]>

<params name="eroad" type="trackdef" mode="m">

  <section name="Surfaces">
    <section name="List">
      &default-surfaces;
    </section>
  </section>

  <section name="Header">
    <attstr name="name"        val="E-Road"></attstr>
    <attnum name="version"     val="3"></attnum>
    <attstr name="author"      val="E.Espie"></attstr>
    <attstr name="description" val="Road Course"></attstr>
  </section>

  <section name="Graphic">
    <attstr name="3d description" val="eroad.ac"></attstr>

    <attstr name="background image" val="tracks/eroad/background.png"></attstr>
    <attnum name="background color R" val="0.59375"></attnum>
    <attnum name="background color G" val="0.75"></attnum>
    <attnum name="background color B" val="0.96875"></attnum>

    <section name="Environment Mapping">
      <section name="general">
	<attstr name="env map image" val="env.png"></attstr>
      </section>
    </section>

    <section name="Terrain Generation">
      <attnum name="track step" unit="m" val="5"></attnum>
      <attnum name="border margin" unit="m" val="100"></attnum>
      <attnum name="border step" unit="m" val="30"></attnum>
      <attnum name="border height" unit="m" val="20"></attnum>
      <attstr name="orientation" val="counter-clockwise"></attstr>
      <attstr name="relief file" val="eroad-relief.ac"></attstr>
    </section>

  </section>

  <section name="Main Track">

    <attstr name="surface" in="asphalt,grass,sand" val="asphalt-lines"></attstr>
    <attnum name="width" unit="m" val="16.0"></attnum>

    <attstr name="rside surface"  val="grass"></attstr>
    <attnum name="rside width"    val="5.0"></attnum>
    <attstr name="rside type" in="tangent,level" val="tangent"></attstr>

    <attstr name="lside surface"  val="asphalt-pits"></attstr>
    <attnum name="lside width"    val="15.0"></attnum>
    <attstr name="lside type" in="tangent,level" val="tangent"></attstr>

    <attstr name="pit type"   val="track side"></attstr>
    <attstr name="pit entry"  val="s4-1"></attstr>
    <attstr name="pit exit"   val="s3"></attstr>
    <attstr name="pit start"  val="last"></attstr>
    <attstr name="pit end"    val="start lane"></attstr>
    <attstr name="pit side"   val="left"></attstr>
    <attnum name="pit length" val="15" unit="m"></attnum>
    <attnum name="pit width"  val="5" unit="m"></attnum>

    <section name="segments">

      <section name="start lane">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="195"></attnum>
      </section>

      <section name="s2">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="10"></attnum>
	<attstr name="lside surface" val="asphalt"></attstr>
	<attnum name="lside end width" val="10"></attnum>
      </section>

      <section name="t1">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="17"></attnum>
      </section>

      <section name="s3">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="50"></attnum>
	<attnum name="lside end width" val="0"></attnum>
      </section>

      <section name="t2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="36"></attnum>
 	<attstr name="lside surface" val="grass"></attstr>
	<attnum name="lside end width" val="5"></attnum>
      </section>

      <section name="t3">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="400"></attnum>
	<attnum name="arc" unit="deg" val="19"></attnum>
      </section>

      <section name="t5-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="70"></attnum>
	<attnum name="arc" unit="deg" val="132"></attnum>
      </section>

      <section name="t5-2">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="60"></attnum>
	<attnum name="arc" unit="deg" val="42"></attnum>
      </section>

      <section name="t5-3">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="70"></attnum>
	<attnum name="arc" unit="deg" val="32"></attnum>
      </section>

      <section name="t5-4">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="60"></attnum>
	<attnum name="arc" unit="deg" val="35"></attnum>
      </section>

      <section name="t6-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="60"></attnum>
	<attnum name="arc" unit="deg" val="32"></attnum>
      </section>

      <section name="t6-2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="120"></attnum>
	<attnum name="arc" unit="deg" val="75"></attnum>
      </section>

      <section name="t7">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="110"></attnum>
      </section>

      <section name="t8">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="150"></attnum>
	<attnum name="arc" unit="deg" val="80"></attnum>
      </section>

      <section name="t9">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="80"></attnum>
	<attnum name="arc" unit="deg" val="30"></attnum>
      </section>

      <section name="t10">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="150"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
      </section>

      <section name="s4">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="50"></attnum>
      </section>

      <section name="t11">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="50"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
      </section>

      <section name="t12-1">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="40"></attnum>
	<attnum name="arc" unit="deg" val="80"></attnum>
      </section>

      <section name="t12-2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="50"></attnum>
	<attnum name="arc" unit="deg" val="10"></attnum>
      </section>

      <section name="t13">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="40"></attnum>
	<attnum name="arc" unit="deg" val="110"></attnum>
      </section>

      <section name="t14-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="20"></attnum>
      </section>

      <section name="t14-2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="40"></attnum>
	<attnum name="arc" unit="deg" val="95"></attnum>
      </section>

      <section name="t15-1">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="80"></attnum>
	<attnum name="arc" unit="deg" val="18"></attnum>
      </section>

      <section name="t15-2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="70"></attnum>
	<attnum name="arc" unit="deg" val="30"></attnum>
      </section>

      <section name="t16">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="40"></attnum>
	<attnum name="arc" unit="deg" val="130"></attnum>
      </section>

      <section name="t17-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="40"></attnum>
	<attnum name="arc" unit="deg" val="16"></attnum>
      </section>

      <section name="t17-2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="90"></attnum>
	<attnum name="arc" unit="deg" val="80"></attnum>
      </section>

      <section name="t18-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="40"></attnum>
	<attnum name="arc" unit="deg" val="66"></attnum>
      </section>

      <section name="t18-2">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="60"></attnum>
	<attnum name="arc" unit="deg" val="54"></attnum>
      </section>

      <section name="t18-3">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="50"></attnum>
	<attnum name="arc" unit="deg" val="66"></attnum>
      </section>

      <section name="t18-4">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="40"></attnum>
	<attnum name="arc" unit="deg" val="57"></attnum>
      </section>

      <section name="s5">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="90"></attnum>
      </section>

      <section name="t19-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="50"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
      </section>

      <section name="t19-1">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="40"></attnum>
	<attnum name="arc" unit="deg" val="47"></attnum>
      </section>

      <section name="t20">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="97"></attnum>
	<attnum name="arc" unit="deg" val="114"></attnum>
      </section>

      <section name="t21">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="123.5165309"></attnum>
	<attnum name="arc" unit="deg" val="45"></attnum>
	<attnum name="lside end width" val="0"></attnum>
      </section>

      <section name="s4-1">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="72.8661194"></attnum>
	<attnum name="lside end width" val="10"></attnum>
	<attstr name="lside surface"  val="asphalt"></attstr>
      </section>

      <section name="s4-2">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="10"></attnum>
	<attnum name="lside end width" val="15"></attnum>
      </section>

      <section name="last">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="195"></attnum>
	<attstr name="lside surface"  val="asphalt-pits"></attstr>
      </section>

    </section>

  </section>

</params>


