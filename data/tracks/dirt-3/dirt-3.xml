<!DOCTYPE params SYSTEM "../../../src/libs/tgf/params.dtd" [
<!-- general definitions for tracks -->
<!ENTITY default-surfaces SYSTEM "data/tracks/surfaces.xml">
]>

<params name="dirt-3" type="template" mode="mw">

  <section name="Surfaces">
    <section name="List">
      &default-surfaces;
    </section>
  </section>

  <section name="Header">
    <attstr name="name" val="Dirt 3"></attstr>
    <attnum name="version" val="3"></attnum>
    <attstr name="author" val="E.Espie"></attstr>
    <attstr name="description" val=""></attstr>
    <attstr name="3d description" val="dirt-3.ac"></attstr>
  </section>

  <section name="Graphic">
    <attstr name="3d description" val="dirt-3.ac"></attstr>

    <attstr name="background image"  val="tracks/dirt-3/background.png"></attstr>

    <attnum name="background color R" val="0.28125"></attnum>
    <attnum name="background color G" val="0.4375"></attnum>
    <attnum name="background color B" val="0.75"></attnum>

    <section name="Environment Mapping">
      <section name="general">
	<attstr name="env map image" val="env.png"></attstr>
      </section>
    </section>

    <section name="Terrain Generation">
      <attnum name="track step" unit="m" val="25"></attnum>
      <attnum name="border margin" unit="m" val="100"></attnum>
      <attnum name="border step" unit="m" val="30"></attnum>
      <attnum name="border height" unit="m" val="15"></attnum>
      <attstr name="orientation" val="counter-clockwise"></attstr>
      <attstr name="relief file" val="dirt-3-relief.ac"></attstr>
    </section>

  </section>


  <section name="Main Track">

    <attnum name="width" unit="m" val="20"></attnum>
    <attstr name="surface" in="asphalt,concrete,grass,sand,dirt" val="dirt"></attstr>
    <attnum name="rside width" val="4"></attnum>
    <attstr name="rside surface"  val="dirt-b"></attstr>
    <attstr name="rside type" in="level,tangent" val="level"></attstr>
    <attnum name="lside width" val="4"></attnum>
    <attstr name="lside surface"  val="dirt-b"></attstr>
    <attstr name="lside type" in="level,tangent" val="level"></attstr>
    <attnum name="profil steps length" val="8" unit="m"></attnum>

    <!-- PITS -->
    <attstr name="pit type"   val="track side"></attstr>
    <attstr name="pit side"   val="left"></attstr>
    <attstr name="pit entry"  val="s2-1"></attstr>
    <attstr name="pit start"  val="s2-2"></attstr>
    <attstr name="pit end"    val="s2-2"></attstr>
    <attstr name="pit exit"   val="s2-3"></attstr>
    <attnum name="pit length" val="15" unit="m"></attnum>
    <attnum name="pit width"  val="5" unit="m"></attnum>

    <section name="segments">

      <section name="s1">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="100"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="0"></attnum>
      </section>

      <section name="t1-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="66.25"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="-5" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="-1"></attnum>
      </section>

      <section name="t1-2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="66.25"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="0"></attnum>
      </section>

      <section name="t2-1">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="42.5"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="10" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="-0.5"></attnum>
      </section>

      <section name="t2-2">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="42.5"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="0"></attnum>
      </section>

      <section name="t3-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="66.25"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="-5" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="-1"></attnum>
      </section>

      <section name="t3-2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="66.25"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="0"></attnum>
      </section>

      <section name="s2-1">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="40"></attnum>
	<attnum name="lside end width" val="15"></attnum>
      </section>

      <section name="s2-2">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="120"></attnum>
	<attstr name="lside surface"  val="asphalt-pits"></attstr>
      </section>

      <section name="s2-3">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="40"></attnum>
	<attnum name="lside end width" val="4"></attnum>
	<attstr name="lside surface"  val="dirt-b"></attstr>
      </section>

      <section name="t4-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="66.25"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="-5" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="-1"></attnum>
      </section>

      <section name="t4-2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="66.25"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="0"></attnum>
      </section>

      <section name="t5-1">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="42.5"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="10" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="-0.5"></attnum>
      </section>

      <section name="t5-2">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="42.5"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="0"></attnum>
      </section>

      <section name="t6-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="66.25"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="-5" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="-1"></attnum>
      </section>

      <section name="t6-2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="66.25"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="0"></attnum>
      </section>

      <section name="s3">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="100"></attnum>
      </section>


    </section>

  </section>

</params>


