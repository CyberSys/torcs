<!DOCTYPE params SYSTEM "../../../src/libs/tgf/params.dtd" [
<!-- general definitions for tracks -->
<!ENTITY default-surfaces SYSTEM "data/tracks/surfaces.xml">
]>

<params name="dirt-3" type="template" mode="mw">

  <section name="Surfaces">
    <section name="List">
      &default-surfaces;
    </section>
  </section>

  <section name="Header">
    <attstr name="name"        val="Dirt 3"/>
    <attstr name="category"    val="dirt"/>
    <attnum name="version"     val="3"/>
    <attstr name="author"      val="E.Espie"/>
    <attstr name="description" val="Oval based dirt track"/>
  </section>

  <section name="Graphic">
    <attstr name="3d description" val="dirt-3.ac"/>

    <attstr name="background image"  val="background.png"/>

    <attnum name="background color R" val="0.28125"/>
    <attnum name="background color G" val="0.4375"/>
    <attnum name="background color B" val="0.75"/>

    <section name="Environment Mapping">
      <section name="general">
	<attstr name="env map image" val="env.png"/>
      </section>
    </section>

    <section name="Terrain Generation">
      <attnum name="track step" unit="m" val="25"/>
      <attnum name="border margin" unit="m" val="100"/>
      <attnum name="border step" unit="m" val="30"/>
      <attnum name="border height" unit="m" val="15"/>
      <attstr name="orientation" val="counter-clockwise"/>
      <attstr name="relief file" val="dirt-3-relief.ac"/>
    </section>

  </section>


  <section name="Main Track">

    <attnum name="width" unit="m" val="20"/>
    <attstr name="surface" in="asphalt,concrete,grass,sand,dirt" val="dirt"/>
    <attnum name="rside width" val="4"/>
    <attstr name="rside surface"  val="dirt-b"/>
    <attstr name="rside type" in="level,tangent" val="level"/>
    <attnum name="lside width" val="4"/>
    <attstr name="lside surface"  val="dirt-b"/>
    <attstr name="lside type" in="level,tangent" val="level"/>
    <attstr name="rborder surface" val="sand"/>
    <attstr name="lborder surface" val="sand"/>
    <attnum name="profil steps length" val="8" unit="m"/>

    <!-- PITS -->
    <attstr name="pit type"   val="track side"/>
    <attstr name="pit side"   val="left"/>
    <attstr name="pit entry"  val="s2-1"/>
    <attstr name="pit start"  val="s2-2"/>
    <attstr name="pit end"    val="s2-2"/>
    <attstr name="pit exit"   val="s2-3"/>
    <attnum name="pit length" val="15" unit="m"/>
    <attnum name="pit width"  val="5" unit="m"/>

    <section name="segments">

      <section name="s1">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="100"/>
 	<attnum name="banking end" val="0" unit="deg"/>
 	<attnum name="z end" unit="m" val="0"/>
      </section>

      <section name="t1-1">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="66.25"/>
 	<attnum name="banking end" val="-5" unit="deg"/>
 	<attnum name="z end" unit="m" val="-1"/>
      </section>

      <section name="t1-2">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="66.25"/>
 	<attnum name="banking end" val="0" unit="deg"/>
 	<attnum name="z end" unit="m" val="0"/>
      </section>

      <section name="t2-1">
        <attstr name="type" val="rgt"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="42.5"/>
 	<attnum name="banking end" val="10" unit="deg"/>
 	<attnum name="z end" unit="m" val="-0.5"/>
      </section>

      <section name="t2-2">
        <attstr name="type" val="rgt"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="42.5"/>
 	<attnum name="banking end" val="0" unit="deg"/>
 	<attnum name="z end" unit="m" val="0"/>
      </section>

      <section name="t3-1">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="66.25"/>
 	<attnum name="banking end" val="-5" unit="deg"/>
 	<attnum name="z end" unit="m" val="-1"/>
      </section>

      <section name="t3-2">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="66.25"/>
 	<attnum name="banking end" val="0" unit="deg"/>
 	<attnum name="z end" unit="m" val="0"/>
      </section>

      <section name="s2-1">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="40"/>
	<attnum name="lside end width" val="15"/>
      </section>

      <section name="s2-2">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="120"/>
	<attstr name="lside surface"  val="asphalt-pits"/>
      </section>

      <section name="s2-3">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="40"/>
	<attnum name="lside end width" val="4"/>
	<attstr name="lside surface"  val="dirt-b"/>
      </section>

      <section name="t4-1">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="66.25"/>
 	<attnum name="banking end" val="-5" unit="deg"/>
 	<attnum name="z end" unit="m" val="-1"/>
      </section>

      <section name="t4-2">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="66.25"/>
 	<attnum name="banking end" val="0" unit="deg"/>
 	<attnum name="z end" unit="m" val="0"/>
      </section>

      <section name="t5-1">
        <attstr name="type" val="rgt"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="42.5"/>
 	<attnum name="banking end" val="10" unit="deg"/>
 	<attnum name="z end" unit="m" val="-0.5"/>
      </section>

      <section name="t5-2">
        <attstr name="type" val="rgt"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="42.5"/>
 	<attnum name="banking end" val="0" unit="deg"/>
 	<attnum name="z end" unit="m" val="0"/>
      </section>

      <section name="t6-1">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="66.25"/>
 	<attnum name="banking end" val="-5" unit="deg"/>
 	<attnum name="z end" unit="m" val="-1"/>
      </section>

      <section name="t6-2">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="66.25"/>
 	<attnum name="banking end" val="0" unit="deg"/>
 	<attnum name="z end" unit="m" val="0"/>
      </section>

      <section name="s3">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="100"/>
      </section>


    </section>

  </section>

</params>


