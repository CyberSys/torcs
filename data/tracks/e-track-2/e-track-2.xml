      <section name="pit-entry">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="114.01632434"></attnum>
	<attnum name="lside start width" val="10"></attnum>
	<attnum name="lside end width"    val="15.0"></attnum>
	<attstr name="lside surface" val="asphalt"></attstr>
	<attnum name="lborder width" val="0"></attnum>
      </section>

      <section name="pit-start">
