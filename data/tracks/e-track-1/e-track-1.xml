<!DOCTYPE params SYSTEM "../../../src/libs/tgf/params.dtd" [
<!-- general definitions for tracks -->
<!ENTITY default-surfaces SYSTEM "data/tracks/surfaces.xml">
]>

<params name="E-Track 1" type="trackdef" mode="mw">

  <section name="Surfaces">
    <section name="List">
      &default-surfaces;
    </section>
  </section>

  <section name="Header">
    <attstr name="name"        val="E-Track 1"/>
    <attstr name="category"    val="road"/>
    <attnum name="version"     val="3"/>
    <attstr name="author"      val="E. Espie"/>
    <attstr name="description" val="Track with a 'Bus Stop' like chicane"/>
  </section>

  <section name="Graphic">
    <attstr name="3d description" val="e-track-1.ac"/>
    <attstr name="background image" val="background.png"/>
    <attnum name="background color R" val="0.59375"/>
    <attnum name="background color G" val="0.75"/>
    <attnum name="background color B" val="0.96875"/>

    <section name="Environment Mapping">
      <section name="general">
	<attstr name="env map image" val="env.png"/>
      </section>
    </section>

    <section name="Terrain Generation">
      <attnum name="track step" unit="m" val="9"/>
      <attnum name="border margin" unit="m" val="100"/>
      <attnum name="border step" unit="m" val="30"/>
      <attnum name="border height" unit="m" val="5"/>
      <attstr name="orientation" val="counter-clockwise"/>
    </section>

  </section>


  <section name="Main Track">

    <attnum name="width" unit="m" val="15.0"/>
    <attstr name="surface" in="asphalt,concrete,grass,sand,dirt" val="asphalt-lines"/>
    <attnum name="lside width" val="7"/>
    <attnum name="rside width" val="7"/>
    <attstr name="rside surface"  val="grass"/>
    <attstr name="lside surface"  val="grass"/>

    <!-- PITS -->
    <attstr name="pit type"   val="track side"/>
    <attstr name="pit side"   val="left"/>
    <attstr name="pit entry"  val="s1"/>
    <attstr name="pit exit"   val="s3"/>
    <attstr name="pit start"  val="s2"/>
    <attstr name="pit end"    val="s2"/>
    <attnum name="pit length" val="15" unit="m"/>
    <attnum name="pit width"  val="5" unit="m"/>

    <section name="segments">

      <section name="s1">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="100"/>
	<attnum name="lside end width" val="15"/>
	<attstr name="lside surface"  val="asphalt"/>
      </section>

      <section name="s2">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="300"/>
	<attstr name="lside surface"  val="asphalt-pits"/>
      </section>

      <section name="s3">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="100"/>
	<attnum name="lside end width" val="7"/>
	<attstr name="lside surface"  val="asphalt"/>
      </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attstr name="surface" val="asphalt-l-left"/>
	<attnum name="radius" unit="m" val="40"/>
	<attnum name="arc" unit="deg" val="90"/>

	<attnum name="grade" val="3" unit="%"/>
	<attnum name="banking end" val="-2.0" unit="deg"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="12"/>
	<attnum name="profil end tangent" val="3" unit="%"/>
	<attstr name="lside surface"  val="grass"/>
      </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attstr name="surface" val="asphalt-lines"/>
	<attnum name="radius" unit="m" val="200"/>
	<attnum name="arc" unit="deg" val="120"/>

	<attnum name="banking end" val="0" unit="deg"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="50"/>
	<attnum name="profil end tangent" val="0" unit="%"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="200"/>

	<attnum name="grade" val="0" unit="%"/>
	<attnum name="z end" val="0"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="40"/>
	<attnum name="profil end tangent" val="0" unit="%"/>
      </section>

      <section name="turn">
        <attstr name="type" val="rgt"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="30"/>

	<attnum name="banking end" val="3" unit="deg"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="10"/>
      </section>

      <section name="turn">
        <attstr name="type" val="rgt"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="90"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="20"/>
      </section>

      <section name="turn">
        <attstr name="type" val="rgt"/>
	<attstr name="surface" val="asphalt-l-right"/>
	<attnum name="radius" unit="m" val="30"/>
	<attnum name="arc" unit="deg" val="90"/>

	<attnum name="banking end" val="0" unit="deg"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="10"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attstr name="surface" val="asphalt-lines"/>
	<attnum name="lg" unit="m" val="200"/>

	<attnum name="grade" val="3" unit="%"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="40"/>
	<attnum name="profil end tangent" val="3" unit="%"/>
      </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attstr name="surface" val="asphalt-l-left"/>
	<attnum name="radius" unit="m" val="50"/>
	<attnum name="arc" unit="deg" val="90"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attstr name="surface" val="asphalt-l-both"/>
	<attnum name="lg" unit="m" val="20"/>
      </section>

      <section name="turn">
        <attstr name="type" val="rgt"/>
	<attstr name="surface" val="asphalt-l-right"/>
	<attnum name="radius" unit="m" val="50"/>
	<attnum name="arc" unit="deg" val="90"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attstr name="surface" val="asphalt-lines"/>
	<attnum name="lg" unit="m" val="100"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="100"/>

	<attnum name="banking end" val="-5" unit="deg"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="20"/>
      </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attstr name="surface" val="asphalt-l-left"/>
	<attnum name="radius" unit="m" val="40"/>
	<attnum name="arc" unit="deg" val="90"/>

	<attnum name="grade" val="0" unit="%"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="10"/>
	<attnum name="profil end tangent" val="0" unit="%"/>
      </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="25"/>
	<attnum name="arc" unit="deg" val="90"/>

	<attnum name="grade" val="-2" unit="%"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="8"/>
	<attnum name="profil end tangent" val="-2" unit="%"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attstr name="surface" val="asphalt-lines"/>
	<attnum name="lg" unit="m" val="100"/>

	<attnum name="grade" val="0" unit="%"/>
	<attnum name="banking end" val="0" unit="deg"/>
	<attnum name="z end" val="10"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="20"/>
	<attnum name="profil end tangent" val="0" unit="%"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="50"/>

	<attnum name="z end" val="12"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="10"/>
	<attnum name="profil end tangent" val="0" unit="%"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="50"/>


	<attnum name="z end" val="8"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="10"/>
	<attnum name="profil end tangent" val="-8" unit="%"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="100"/>

	<attnum name="z end" val="0"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="20"/>
	<attnum name="profil end tangent" val="0" unit="%"/>
      </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="500"/>
	<attnum name="arc" unit="deg" val="30"/>

	<attnum name="z end" val="15"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="40"/>
	<attnum name="profil end tangent" val="0" unit="%"/>
      </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="200"/>
	<attnum name="arc" unit="deg" val="30"/>

	<attnum name="grade" val="-1" unit="%"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="20"/>
	<attnum name="profil end tangent" val="-1" unit="%"/>
      </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attnum name="radius" unit="m" val="100"/>
	<attnum name="arc" unit="deg" val="30"/>
      </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attstr name="surface" val="asphalt-l-left"/>
	<attnum name="radius" unit="m" val="15"/>
	<attnum name="arc" unit="deg" val="90"/>
	<attstr name="rside surface" val="concrete"/>
	<attstr name="lside surface" val="concrete"/>
       </section>

      <section name="turn">
        <attstr name="type" val="rgt"/>
	<attstr name="surface" val="asphalt-l-right"/>
	<attnum name="radius" unit="m" val="15"/>
	<attnum name="arc" unit="deg" val="90"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attstr name="surface" val="asphalt-l-both"/>
	<attnum name="lg" unit="m" val="30"/>
      </section>

      <section name="turn">
        <attstr name="type" val="rgt"/>
	<attstr name="surface" val="asphalt-l-right"/>
	<attnum name="radius" unit="m" val="15"/>
	<attnum name="arc" unit="deg" val="90"/>
     </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attstr name="surface" val="asphalt-l-left"/>
	<attnum name="radius" unit="m" val="15"/>
	<attnum name="arc" unit="deg" val="90"/>
      </section>

      <section name="turn">
        <attstr name="type" val="lft"/>
	<attstr name="surface" val="asphalt-lines"/>
	<attnum name="radius" unit="m" val="154.61524227"/>
	<attnum name="arc" unit="deg" val="90"/>

	<attnum name="grade" val="0" unit="%"/>
	<attnum name="z end" val="0"/>
	<attstr name="profil" in="linear,spline" val="spline"/>
	<attnum name="profil steps" val="20"/>
	<attnum name="profil end tangent" val="0" unit="%"/>
	<attstr name="rside surface" val="grass"/>
	<attstr name="lside surface" val="grass"/>
      </section>

      <section name="segment">
        <attstr name="type" val="str"/>
	<attnum name="lg" unit="m" val="20.19237887"/>
      </section>

    </section>
  </section>

</params>

