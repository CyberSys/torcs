<!DOCTYPE params SYSTEM "../../../src/libs/tgf/params.dtd" [
<!-- general definitions for tracks -->
<!ENTITY default-surfaces SYSTEM "data/tracks/surfaces.xml">
]>

<params name="CG SPEEDWAY" type="trackdef" mode="mw">

  <section name="Surfaces">
    <section name="List">
      &default-surfaces;

      <section name="asphalt2">
	<attnum name="color R1" val="0.1"></attnum>
	<attnum name="color G1" val="0.1"></attnum>
	<attnum name="color B1" val="0.1"></attnum>
	<attnum name="color R2" val="0.2"></attnum>
	<attnum name="color G2" val="0.2"></attnum>
	<attnum name="color B2" val="0.2"></attnum>
	<attstr name="texture name" val="asphalt2.rgb"></attstr>
	<attstr name="texture type" in="discrete, continuous" val="discrete"></attstr>
	<attnum name="texture size" val="100.0" unit="m"></attnum>
	<attnum name="texture mipmap" val="0.0" unit="m"></attnum>

	<attnum name="friction"           val="1.2"></attnum>
	<attnum name="rolling resistance" val="0.001"></attnum>

	<attnum name="roughness" val="0"></attnum>
	<attnum name="roughness wavelength" val="1.0"></attnum>
      </section>

      <section name="asphalt3">
	<attnum name="color R1" val="0.1"></attnum>
	<attnum name="color G1" val="0.1"></attnum>
	<attnum name="color B1" val="0.1"></attnum>
	<attnum name="color R2" val="0.2"></attnum>
	<attnum name="color G2" val="0.2"></attnum>
	<attnum name="color B2" val="0.2"></attnum>
	<attstr name="texture name" val="asphalt3.rgb"></attstr>
	<attstr name="texture type" in="discrete, continuous" val="discrete"></attstr>
	<attnum name="texture size" val="100.0" unit="m"></attnum>
	<attnum name="texture mipmap" val="0.0" unit="m"></attnum>

	<attnum name="friction"           val="1.0"></attnum>
	<attnum name="rolling resistance" val="0.001"></attnum>

	<attnum name="roughness" val="0"></attnum>
	<attnum name="roughness wavelength" val="1.0"></attnum>
      </section>

    </section>
  </section>

  <section name="Header">
    <attstr name="name"              val="CG Speedway number 1"></attstr>
    <attnum name="version"           val="2"></attnum>
    <attstr name="author"            val="CG"></attstr>
    <attstr name="description"       val="g"></attstr>
  </section>

  <section name="Graphic">
    <attstr name="3d description" val="g-track-1.ac"></attstr>

    <attstr name="background image" val="background.png"></attstr>
    <attnum name="background color R" val="0.59375"></attnum>
    <attnum name="background color G" val="0.75"></attnum>
    <attnum name="background color B" val="0.96875"></attnum>

    <section name="Terrain Generation">
      <attnum name="track step" unit="m" val="8"></attnum>
      <attnum name="border margin" unit="m" val="100"></attnum>
      <attnum name="border step" unit="m" val="30"></attnum>
      <attnum name="border height" unit="m" val="0"></attnum>
      <attstr name="orientation" val="counter-clockwise"></attstr>
      <attstr name="relief file" val=""></attstr>
    </section>

    <section name="Turn Marks">
      <attnum name="width" val="1.0" unit="m"></attnum>
      <attnum name="height" val="1.0" unit="m"></attnum>
      <attnum name="vertical space" val="0" unit="m"></attnum>
      <attnum name="horizontal space" val="0.5" unit="m"></attnum>
    </section>

  </section>




  <section name="Main Track">

    <attstr name="surface" in="asphalt,grass,sand" val="asphalt2"></attstr>
    <attnum name="width" unit="m" val="15.0"></attnum>

    <attstr name="rside surface"  val="asphalt3"></attstr>
    <attnum name="rside width"    val="3.0"></attnum>
    <attstr name="rside type" in="level,tangent" val="tangent"></attstr>

    <attstr name="lside surface"  val="asphalt"></attstr>
    <attnum name="lside width"    val="3.0"></attnum>
    <attstr name="lside type" in="level,tangent" val="tangent"></attstr>

    <section name="segments">
      <!-- first segment -->

      <section name="start lane">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="150"></attnum>
	<attstr name="rside surface" val="asphalt"></attstr>
        <attnum name="texture size"    val="100.0"></attnum>
      </section>

      <section name="segment line1">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="202.715"></attnum>
	<attnum name="z end" val="1.0" unit="m"></attnum>
	<attnum name="banking end" val="-10" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="20"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="lside end width" val="2"></attnum>
	<attstr name="rside surface" val="asphalt"></attstr>
	<attnum name="rside end width" val="5"></attnum>
        <attnum name="texture size"    val="100.0"></attnum>
      </section>

      <section name="turn 1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="30"></attnum>
	<attnum name="z end" val="1.5" unit="m"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="8"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attstr name="rside surface" val="asphalt"></attstr>
	<attnum name="banking end" val="-10" unit="deg"></attnum>
	<attstr name="marks" val="50;100"></attstr>
        <attnum name="texture size"    val="100.0"></attnum>
      </section>

      <section name="segment line1b">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="20"></attnum>
	<attnum name="z end" val="1.5" unit="m"></attnum>
	<attnum name="banking end" val="-10" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="4"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="lside end width" val="2"></attnum>
	<attstr name="rside surface" val="asphalt"></attstr>
	<attnum name="rside end width" val="4"></attnum>
        <attnum name="texture size"    val="50.0"></attnum>
      </section>

      <section name="turn 1b">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
	<attnum name="z end" val="1.5" unit="m"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="25"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attstr name="rside surface" val="asphalt"></attstr>
	<attnum name="rside end width" val="2"></attnum>
	<attnum name="banking end" val="0" unit="deg"></attnum>
        <attnum name="texture size"    val="50.0"></attnum>
      </section>


      <section name="segment line2">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="10"></attnum>
	<attnum name="banking end" val="0" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="2"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="lside end width" val="2"></attnum>
      </section>

      <section name="turn 3">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="200"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
	<attnum name="banking end" val="3" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="30"></attnum>
      </section>

      <section name="segment line3">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="25"></attnum>
	<attnum name="z end" val="1.5" unit="m"></attnum>
	<attnum name="banking end" val="0" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="5"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="lside end width" val="2"></attnum>
	<attnum name="rside end width" val="0"></attnum>
      </section>

      <section name="turn 3b">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="60"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
	<attnum name="banking end" val="3" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="20"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="rside end width" val="0"></attnum>
      </section>

      <section name="segment line4">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="50"></attnum>
	<attnum name="z end" val="2" unit="m"></attnum>
	<attnum name="banking end" val="0" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="10"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="lside end width" val="2"></attnum>
	<attnum name="rside end width" val="0"></attnum>
      </section>

      <section name="turn 4">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="60"></attnum>
	<attnum name="arc" unit="deg" val="140"></attnum>
	<attnum name="z end" val="2.0" unit="m"></attnum>
	<attnum name="banking end" val="0" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="25"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="rside end width" val="0"></attnum>
      </section>

      <section name="segment line5">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="50"></attnum>
	<attnum name="z end" val="1.5" unit="m"></attnum>
	<attnum name="banking end" val="5" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="10"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="lside end width" val="2"></attnum>
	<attnum name="rside end width" val="0"></attnum>
      </section>

      <section name="turn 4b">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="80"></attnum>
	<attnum name="arc" unit="deg" val="40"></attnum>
	<attnum name="z end" val="1.0" unit="m"></attnum>
	<attnum name="banking end" val="5" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="10"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="rside end width" val="2"></attnum>
      </section>

      <section name="segment line6a">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="58.8"></attnum>
	<attnum name="z end" val="0.0" unit="m"></attnum>
	<attnum name="banking end" val="0" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="10"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="lside end width" val="2"></attnum>
	<attnum name="rside end width" val="4"></attnum>
      </section>

      <section name="segment line6b">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="150"></attnum>
	<attnum name="z end" val="8.0" unit="m"></attnum>
	<attnum name="banking end" val="0" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="30"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="lside end width" val="2"></attnum>
	<attnum name="rside end width" val="4"></attnum>
      </section>

      <section name="segment line6c">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="200"></attnum>
	<attnum name="z end" val="0.0" unit="m"></attnum>
	<attnum name="banking end" val="0" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="40"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="lside end width" val="2"></attnum>
	<attnum name="rside end width" val="4"></attnum>
      </section>

      <section name="turn 2">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="100"></attnum>
	<attnum name="arc" unit="deg" val="10"></attnum>
	<attnum name="z end" val="0.0" unit="m"></attnum>
	<attnum name="banking end" val="0" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="4"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attstr name="marks" val="50;100"></attstr>
	<attnum name="lside end width" val="2"></attnum>
	<attnum name="rside end width" val="5"></attnum>
      </section>

      <section name="segment line5a">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="120"></attnum>
	<attnum name="banking end" val="-10" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="20"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="lside end width" val="3"></attnum>
	<attnum name="rside end width" val="7"></attnum>
      </section>

      <section name="turn 2b">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="70"></attnum>
	<attnum name="arc" unit="deg" val="150"></attnum>
	<attnum name="z end" val="0.0" unit="m"></attnum>
	<attnum name="banking end" val="0" unit="deg"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
	<attnum name="profil steps" val="35"></attnum>
	<attstr name="lside surface" val="concrete"></attstr>
	<attnum name="rside end width"    val="3.0"></attnum>
	<attnum name="lside end width"    val="3.0"></attnum>
      </section>

    </section>
  </section>

  <section name="Cameras">
    <section name="list">

      <section name="cam0">
	<!-- Camera's position relative to a segment -->
	<attstr name="segment"   val="turn 1"></attstr>
	<attnum name="to right"  val="-3.0"></attnum>
	<attnum name="to start"  val="0"></attnum>
	<attnum name="height"    val="3"></attnum>
	<!-- Camera field of view, indicates the first and last segment viewed -->
	<attstr name="fov start" val="start lane"></attstr>
	<attstr name="fov end"   val="segment line1b"></attstr>	
      </section>

      <section name="cam1">
	<!-- Camera's position relative to a segment -->
	<attstr name="segment"   val="turn 1b"></attstr>
	<attnum name="to right"  val="-5.0"></attnum>
	<attnum name="to start"  val="45" unit="deg"></attnum>
	<attnum name="height"    val="1"></attnum>
	<!-- Camera field of view, indicates the first and last segment viewed -->
	<attstr name="fov start" val="segment line1b"></attstr>
	<attstr name="fov end"   val="turn 3"></attstr>	
      </section>

      <section name="cam2">
	<!-- Camera's position relative to a segment -->
	<attstr name="segment"   val="turn 3"></attstr>
	<attnum name="to right"  val="17.0"></attnum>
	<attnum name="to start"  val="45" unit="deg"></attnum>
	<attnum name="height"    val="5"></attnum>
	<!-- Camera field of view, indicates the first and last segment viewed -->
	<attstr name="fov start" val="turn 3"></attstr>
	<attstr name="fov end"   val="turn 3b"></attstr>	
      </section>

      <section name="cam3">
	<!-- Camera's position relative to a segment -->
	<attstr name="segment"   val="segment line4"></attstr>
	<attnum name="to right"  val="-3.0"></attnum>
	<attnum name="to start"  val="0"></attnum>
	<attnum name="height"    val="1.5"></attnum>
	<!-- Camera field of view, indicates the first and last segment viewed -->
	<attstr name="fov start" val="turn 3b"></attstr>
	<attstr name="fov end"   val="turn 4"></attstr>	
      </section>

      <section name="cam4">
	<!-- Camera's position relative to a segment -->
	<attstr name="segment"   val="segment line5"></attstr>
	<attnum name="to right"  val="-17.0"></attnum>
	<attnum name="to start"  val="-10"></attnum>
	<attnum name="height"    val="5"></attnum>
	<!-- Camera field of view, indicates the first and last segment viewed -->
	<attstr name="fov start" val="turn 4"></attstr>
	<attstr name="fov end"   val="segment line6c"></attstr>	
      </section>

      <section name="cam5">
	<!-- Camera's position relative to a segment -->
	<attstr name="segment"   val="turn 2"></attstr>
	<attnum name="to right"  val="-3.0"></attnum>
	<attnum name="to start"  val="0"></attnum>
	<attnum name="height"    val="1"></attnum>
	<!-- Camera field of view, indicates the first and last segment viewed -->
	<attstr name="fov start" val="segment line6c"></attstr>
	<attstr name="fov end"   val="turn 2"></attstr>	
      </section>

      <section name="cam6">
	<!-- Camera's position relative to a segment -->
	<attstr name="segment"   val="turn 2b"></attstr>
	<attnum name="to right"  val="-30.0"></attnum>
	<attnum name="to start"  val="40" unit="deg"></attnum>
	<attnum name="height"    val="15"></attnum>
	<!-- Camera field of view, indicates the first and last segment viewed -->
	<attstr name="fov start" val="turn 2"></attstr>
	<attstr name="fov end"   val="start lane"></attstr>	
      </section>


    </section>
  </section>

</params>







