<!DOCTYPE params SYSTEM "../../../src/libs/tgf/params.dtd" [
<!-- general definitions for tracks -->
<!ENTITY default-surfaces SYSTEM "data/tracks/surfaces.xml">
]>

<params name="mixed-2" type="template" mode="mw">

  <section name="Surfaces">
    <section name="List">
      &default-surfaces;
    </section>
  </section>

  <section name="Header">
    <attstr name="name"        val="Mixed 2"></attstr>
    <attstr name="category"    val="dirt"></attstr>
    <attnum name="version"     val="3"></attnum>
    <attstr name="author"      val="E.Espie"></attstr>
    <attstr name="description" val=""></attstr>
  </section>

  <section name="Graphic">
    <attstr name="3d description" val="mixed-2.ac"></attstr>
    <attstr name="background image" val="background.png"></attstr>
    <attnum name="background color R" val="0.59375"></attnum>
    <attnum name="background color G" val="0.75"></attnum>
    <attnum name="background color B" val="0.96875"></attnum>
    <section name="Environment Mapping">
      <section name="1">
	<attstr name="env map image" val="tracks/mixed-2/env.png"></attstr>
      </section>
    </section>

    <section name="Terrain Generation">
      <attnum name="track step" unit="m" val="25"></attnum>
      <attnum name="border margin" unit="m" val="100"></attnum>
      <attnum name="border step" unit="m" val="20"></attnum>
      <attnum name="border height" unit="m" val="5"></attnum>
      <attstr name="orientation" val="clockwise"></attstr>
    </section>
  </section>


  <section name="Main Track">

    <attnum name="width" unit="m" val="10"></attnum>
    <attstr name="surface" in="asphalt,concrete,grass,sand,dirt" val="asphalt-lines"></attstr>
    <attnum name="rside width" val="4"></attnum>
    <attstr name="rside surface"  val="asphalt"></attstr>
    <attstr name="rside type" in="level,tangent" val="level"></attstr>
    <attnum name="lside width" val="4"></attnum>
    <attstr name="lside surface"  val="asphalt"></attstr>
    <attstr name="lside type" in="level,tangent" val="level"></attstr>
    <attnum name="profil steps length" val="5" unit="m"></attnum>

    <section name="segments">

      <section name="s1">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="30"></attnum>
      </section>

      <section name="t1">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="10"></attnum>
	<attnum name="arc" unit="deg" val="45"></attnum>
      </section>

      <section name="s2">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="30"></attnum>
      </section>

      <section name="t2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="10"></attnum>
	<attnum name="arc" unit="deg" val="45"></attnum>
      </section>

      <section name="s3">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="30"></attnum>
      </section>

      <section name="t3">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="10"></attnum>
	<attnum name="arc" unit="deg" val="45"></attnum>
      </section>

      <section name="s4">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="30"></attnum>
	<attstr name="surface" val="dirt"></attstr>
	<attstr name="rside surface"  val="dirt-b"></attstr>
	<attstr name="lside surface"  val="dirt-b"></attstr>
      </section>

      <section name="t4-1">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="10"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
      </section>

      <section name="t4-2">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="20"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="5" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="-0.2"></attnum>
      </section>

      <section name="t4-3">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="20"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
      </section>

      <section name="t4-3">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="20"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
 	<attnum name="z end" unit="m" val="0"></attnum>
      </section>

      <section name="t4-4">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="10"></attnum>
	<attnum name="arc" unit="deg" val="45"></attnum>
      </section>

      <section name="s5">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="90"></attnum>
      </section>

      <section name="t5">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="30"></attnum>
	<attnum name="arc" unit="deg" val="90"></attnum>
      </section>

      <section name="s7">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="60"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="5" unit="deg"></attnum>
      </section>

      <section name="t7">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="15"></attnum>
	<attnum name="arc" unit="deg" val="180"></attnum>
      </section>

      <section name="s8">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="40"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="-5" unit="deg"></attnum>
      </section>

      <section name="t8">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="15"></attnum>
	<attnum name="arc" unit="deg" val="180"></attnum>
      </section>

      <section name="s9">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="50"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
      </section>

      <section name="t9">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="10"></attnum>
	<attnum name="arc" unit="deg" val="45"></attnum>
      </section>

      <section name="s10">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="50"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="5" unit="deg"></attnum>
      </section>

      <section name="t10">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="10"></attnum>
	<attnum name="arc" unit="deg" val="135"></attnum>
      </section>

      <section name="s11">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="40"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
      </section>

      <section name="t11">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="20"></attnum>
	<attnum name="arc" unit="deg" val="180"></attnum>
      </section>

      <section name="s12">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="40"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="5" unit="deg"></attnum>
      </section>

      <section name="t12-1">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="15"></attnum>
	<attnum name="arc" unit="deg" val="180"></attnum>
	<attstr name="profil" in="linear,spline" val="spline"></attstr>
 	<attnum name="banking end" val="0" unit="deg"></attnum>
      </section>

      <section name="t12-2">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="15"></attnum>
	<attnum name="arc" unit="deg" val="45"></attnum>
      </section>

      <section name="s13">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="60"></attnum>
	<attstr name="surface" val="asphalt-lines"></attstr>
	<attstr name="rside surface"  val="asphalt"></attstr>
	<attstr name="lside surface"  val="asphalt"></attstr>
      </section>

      <section name="t13">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="30"></attnum>
	<attnum name="arc" unit="deg" val="45"></attnum>
      </section>

      <section name="s14">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="64.181473"></attnum>
      </section>

      <section name="t14">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="30"></attnum>
	<attnum name="arc" unit="deg" val="45"></attnum>
      </section>

      <section name="s15">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="30"></attnum>
      </section>

      <section name="t15">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="20"></attnum>
	<attnum name="arc" unit="deg" val="45"></attnum>
      </section>

      <section name="s16">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="50"></attnum>
      </section>

      <section name="t16">
        <attstr name="type" val="rgt"></attstr>
	<attnum name="radius" unit="m" val="20"></attnum>
	<attnum name="arc" unit="deg" val="150"></attnum>
      </section>

      <section name="s17">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="50"></attnum>
      </section>

      <section name="t17">
        <attstr name="type" val="lft"></attstr>
	<attnum name="radius" unit="m" val="20"></attnum>
	<attnum name="arc" unit="deg" val="150"></attnum>
      </section>

      <section name="s18">
        <attstr name="type" val="str"></attstr>
	<attnum name="lg" unit="m" val="65.268158"></attnum>
      </section>


    </section>

  </section>

</params>



