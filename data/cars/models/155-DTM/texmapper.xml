<!DOCTYPE params SYSTEM "../../../../src/libs/tgf/params.dtd">

<params name="mapper" type="template">

  <section name="image">
    <attnum name="size" val="1024"></attnum>
  </section>

  <section name="faces">

    <section name="raw 0"> <!-- raw name is whatever you want provided it is unique -->
      <attnum name="height" val="0"></attnum> <!-- automatic height -->

      <section name="col">

	<section name="col 0">
	  <attstr name="face name" val=""></attstr> <!-- Mandatory to have at least one attr -->
	</section>

	<section name="col 1"> 
	  <attstr name="face name" val="rside"></attstr>
	  <attnum name="width" val="0"></attnum> <!-- automatic width -->
	  <attstr name="align" in="X,Y,Z" val="X"></attstr>
	</section>

	<section name="col 2">
	  <attstr name="face name" val=""></attstr> <!-- Mandatory to have at least one attr -->
	</section>

      </section>

    </section>

    <section name="raw 1">
      <section name="col">

	<section name="col 0">
	  <attstr name="face name" val="rear"></attstr>
	  <attnum name="rotX" val="90"></attnum>
	  <attnum name="rotY" val="90"></attnum>
	</section>

	<section name="col 1">
	  <attstr name="face name" val="top"></attstr>
	  <attstr name="align" val="X"></attstr>
	  <attnum name="rotX" val="90"></attnum>
	</section>

	<section name="col 2">
	  <attstr name="face name" val="front"></attstr>
	  <attnum name="rotX" val="90"></attnum>
	  <attnum name="rotY" val="-90"></attnum>
	</section>

      </section>
    </section>

    <section name="raw 2">
      <section name="col">

	<section name="col 0">
	  <attstr name="face name" val=""></attstr> <!-- Mandatory to have at least one attr -->
	  <attnum name="rotX" val="180"></attnum>
	</section>

	<section name="col 1">
	  <attstr name="face name" val="lside"></attstr>
	  <attstr name="align" val="X"></attstr>
	  <attnum name="rotX" val="180"></attnum>
	</section>

      </section>
    </section>

    <section name="raw 3">
      <section name="col">

	<section name="col 0">
	  <attstr name="face name" val="wing"></attstr> <!-- Mandatory to have at least one attr -->
	  <attnum name="rotX" val="90"></attnum>
	</section>

	<section name="col 1">
	  <attstr name="face name" val="bottom"></attstr>
	  <attstr name="align" val="X"></attstr>
	  <attnum name="rotX" val="-90"></attnum>
	</section>

      </section>
    </section>


  </section>

</params>


